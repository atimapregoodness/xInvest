<%- include('layout') %>

<h2 data-aos="fade-in">Login</h2>
<form action="/auth/login" method="POST" data-aos="fade-up">
  <input type="hidden" name="_csrf" value="<%= csrfToken %>">
  <div class="input-group">
    <i class="fas fa-envelope"></i>
    <input type="email" name="email" placeholder="Email" required>
  </div>
  <div class="input-group">
    <i class="fas fa-lock"></i>
    <input type="password" name="password" placeholder="Password" required>
  </div>
  <button type="submit" class="btn holographic">Login</button>
</form>
<a href="/auth/google" class="btn holographic"><i class="fab fa-google"></i> Google Login</a>
