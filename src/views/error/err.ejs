<%- layout('layout/boilerplate', { title: 'Crybiance - Error' }) %>

<style>
  :root {
    --primary: #0fb896;
    --secondary: #1e2a3a;
    --accent: #00d4aa;
    --dark: #0f172a;
    --darker: #17191c;
    --success: #00d98c;
    --danger: #ff375f;
    --warning: #ffb800;
    --info: #0066ff;
    --glass: rgba(255, 255, 255, 0.05);
    --glass-border: rgba(255, 255, 255, 0.1);
    --text: #f8fafc;
    --text-secondary: #cbd5e1;
    --text-muted: #64748b;
    --shadow-lg: 0 15px 35px -10px rgba(0, 0, 0, 0.6);
    --radius: 12px;
    --transition: all 0.3s ease;
  }

  .error-box {
    background: var(--glass);
    border: 1px solid var(--glass-border);
    backdrop-filter: blur(12px);
    border-radius: var(--radius);
    padding: 2rem 1.5rem;
    text-align: center;
    max-width: 420px;
    width: 100%;
    animation: fadeIn 0.5s ease;
    margin: auto;
    margin-top: 25vh;
  }

  .error-icon {
    font-size: 2.5rem;
    color: var(--accent);
    margin-bottom: 0.5rem;
  }

  .error-code {
    font-size: 3.5rem;
    font-weight: 700;
    color: var(--accent);
    margin-bottom: 0.25rem;
  }

  .error-title {
    font-size: 1.3rem;
    font-weight: 600;
    color: var(--text-secondary);
    margin-bottom: 0.5rem;
  }

  .error-message {
    color: var(--text-muted);
    font-size: 0.95rem;
    line-height: 1.5;
    margin-bottom: 1.5rem;
  }

  .btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 0.6rem 1.4rem;
    border-radius: 30px;
    font-weight: 600;
    transition: var(--transition);
    font-size: 0.9rem;
  }

  .btn-primary {
    background: linear-gradient(to right, var(--primary), var(--accent));
    border: none;
    color: var(--text);
    box-shadow: 0 0 15px rgba(0, 212, 170, 0.2);
  }

  .btn-primary:hover {
    transform: translateY(-2px);
    box-shadow: 0 0 25px rgba(0, 212, 170, 0.35);
  }

  .btn-outline {
    border: 1.5px solid var(--accent);
    color: var(--accent);
    background: transparent;
  }

  .btn-outline:hover {
    background: var(--accent);
    color: var(--dark);
  }

  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(15px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @media (max-width: 480px) {
    .error-code {
      font-size: 2.8rem;
    }
    .error-title {
      font-size: 1.1rem;
    }
    .error-message {
      font-size: 0.85rem;
    }
    .btn {
      padding: 0.5rem 1.2rem;
      font-size: 0.85rem;
    }
  }
</style>

<div class="error-box">
  <div class="error-icon">
    <i class="fas fa-exclamation-circle"></i>
  </div>

  <!-- ðŸ§  Dynamic EJS error info -->
  <div class="error-code"><%= status || 500 %></div>
  <h2 class="error-title"><%= title || "Something went wrong" %></h2>
  <p class="error-message"><%= message %></p>

  <div class="d-flex flex-wrap justify-content-center gap-2">
    <a href="/" class="btn btn-primary">
      <i class="fas fa-home me-2"></i> Home
    </a>
    <button class="btn btn-outline" id="tryAgainBtn">
      <i class="fas fa-redo me-2"></i> Retry
    </button>
  </div>
</div>

<script>
  document.getElementById("tryAgainBtn").addEventListener("click", () => {
    window.location.reload();
  });
</script>
