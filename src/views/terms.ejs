<script>
  document.addEventListener("DOMContentLoaded", function () {
    // Initialize terms page functionality
    initSmoothScrolling();
    initTocNavigation();
    initAcceptanceTracking();
    initActiveSectionTracking();
  });

  // Smooth scrolling for anchor links
  function initSmoothScrolling() {
    document.querySelectorAll('a[href^="#"]').forEach((anchor) => {
      anchor.addEventListener("click", function (e) {
        e.preventDefault();
        const target = document.querySelector(this.getAttribute("href"));
        if (target) {
          target.scrollIntoView({
            behavior: "smooth",
            block: "start",
          });
        }
      });
    });
  }

  // Table of Contents navigation
  function initTocNavigation() {
    const tocLinks = document.querySelectorAll(".toc-link");
    const sections = document.querySelectorAll(".terms-section");

    // Update active TOC link based on scroll position
    function updateActiveTocLink() {
      let currentSection = "";

      sections.forEach((section) => {
        const sectionTop = section.offsetTop - 100;
        if (window.scrollY >= sectionTop) {
          currentSection = section.getAttribute("id");
        }
      });

      tocLinks.forEach((link) => {
        link.classList.remove("active");
        if (link.getAttribute("href") === `#${currentSection}`) {
          link.classList.add("active");
        }
      });
    }

    window.addEventListener("scroll", updateActiveTocLink);
    updateActiveTocLink(); // Initial call
  }

  // Acceptance tracking
  function initAcceptanceTracking() {
    const acceptanceCheckbox = document.getElementById("termsAcceptance");
    const acceptButton = document.getElementById("acceptTerms");
    const finalCheckbox = document.getElementById("finalAcceptance");
    const finalButton = document.getElementById("finalAcceptBtn");

    // Sidebar acceptance
    acceptanceCheckbox.addEventListener("change", function () {
      acceptButton.disabled = !this.checked;
    });

    acceptButton.addEventListener("click", function () {
      if (acceptanceCheckbox.checked) {
        showAcceptanceSuccess();
        acceptanceCheckbox.checked = false;
        this.disabled = true;
      }
    });

    // Final acceptance
    finalCheckbox.addEventListener("change", function () {
      finalButton.disabled = !this.checked;
    });

    finalButton.addEventListener("click", function () {
      if (finalCheckbox.checked) {
        showAcceptanceSuccess();
        finalCheckbox.checked = false;
        this.disabled = true;

        // Store acceptance in localStorage
        localStorage.setItem("termsAccepted", new Date().toISOString());
      }
    });
  }

  function showAcceptanceSuccess() {
    // Create success notification
    const notification = document.createElement("div");
    notification.className = "alert alert-success glass-card position-fixed";
    notification.style.cssText = `
    top: 20px;
    right: 20px;
    z-index: 1060;
    min-width: 300px;
    backdrop-filter: blur(20px);
  `;
    notification.innerHTML = `
    <div class="d-flex align-items-center">
      <i class="fas fa-check-circle text-success me-2"></i>
      <div>
        <strong>Terms Accepted</strong>
        <div class="small">Thank you for accepting our Terms & Conditions</div>
      </div>
      <button type="button" class="btn-close btn-close-white ms-auto" onclick="this.parentElement.parentElement.remove()"></button>
    </div>
  `;

    document.body.appendChild(notification);

    // Auto remove after 5 seconds
    setTimeout(() => {
      if (notification.parentElement) {
        notification.remove();
      }
    }, 5000);
  }

  // Active section tracking for quick nav
  function initActiveSectionTracking() {
    const sections = document.querySelectorAll(".terms-section");
    const navLinks = document.querySelectorAll(".nav-pills .nav-link");

    function updateActiveNavLink() {
      let currentSection = "";

      sections.forEach((section) => {
        const sectionTop = section.offsetTop - 150;
        if (window.scrollY >= sectionTop) {
          currentSection = section.getAttribute("id");
        }
      });

      navLinks.forEach((link) => {
        link.classList.remove("active");
        if (link.getAttribute("href") === `#${currentSection}`) {
          link.classList.add("active");
        }
      });
    }

    window.addEventListener("scroll", updateActiveNavLink);
    updateActiveNavLink(); // Initial call
  }

  // Check if user has already accepted terms
  function checkPreviousAcceptance() {
    const accepted = localStorage.getItem("termsAccepted");
    if (accepted) {
      const acceptDate = new Date(accepted).toLocaleDateString();
      console.log(`Terms previously accepted on: ${acceptDate}`);
    }
  }

  // Initialize on load
  checkPreviousAcceptance();
</script>
