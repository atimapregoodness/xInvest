<!-- views/admin/settings.ejs (New View for Settings) -->
<%- layout('layout/adminBoilerplate') %>

<div
  class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center py-3 mb-4 border-bottom"
>
  <h1 class="h2">
    <i class="fas fa-cog me-2 text-primary"></i>
    Admin Settings
  </h1>
</div>

<div class="card glass-card mb-4">
  <div class="card-body">
    <form method="POST" action="/admin/settings">
      <h5 class="mb-4">Wallet Addresses</h5>
      <div class="row g-3 mb-4">
        <div class="col-md-4">
          <label class="form-label">ETH Address</label>
          <input
            type="text"
            name="eth"
            class="form-control"
            value="<%= global.wallets.ETH || '' %>"
            placeholder="Enter ETH wallet address"
          />
        </div>
        <div class="col-md-4">
          <label class="form-label">BTC Address</label>
          <input
            type="text"
            name="btc"
            class="form-control"
            value="<%= global.wallets.BTC || '' %>"
            placeholder="Enter BTC wallet address"
          />
        </div>
        <div class="col-md-4">
          <label class="form-label">USDT Address</label>
          <input
            type="text"
            name="usdt"
            class="form-control"
            value="<%= global.wallets.USDT || '' %>"
            placeholder="Enter USDT wallet address"
          />
        </div>
      </div>

      <h5 class="mb-4">Company Information</h5>
      <div class="row g-3">
        <div class="col-md-6">
          <label class="form-label">Phone Number</label>
          <input
            type="tel"
            name="phone"
            class="form-control"
            value="<%= global.company.phone || '' %>"
            placeholder="Enter company phone"
          />
        </div>
        <div class="col-md-6">
          <label class="form-label">Email Address</label>
          <input
            type="email"
            name="email"
            class="form-control"
            value="<%= global.company.email || '' %>"
            placeholder="Enter company email"
          />
        </div>
        <div class="col-md-6">
          <label class="form-label">Physical Address (Optional)</label>
          <input
            type="text"
            name="address"
            class="form-control"
            value="<%= global.company.address || '' %>"
            placeholder="Enter company address"
          />
        </div>
        <div class="col-md-6">
          <label class="form-label">Website (Optional)</label>
          <input
            type="url"
            name="website"
            class="form-control"
            value="<%= global.company.website || '' %>"
            placeholder="Enter company website"
          />
        </div>
      </div>

      <div class="mt-4">
        <button type="submit" class="btn btn-primary">
          <i class="fas fa-save me-2"></i>Save Changes
        </button>
      </div>
    </form>
  </div>
</div>
