<!-- Floating Navigation - Only on Mobile -->
<div class="floating-nav">
  <a href="/dashboard" class="nav-item-mobile active">
    <i class="fas fa-home"></i>
    <span class="nav-label">Home</span>
  </a>

  <a href="/dashboard/invest" class="nav-item-mobile">
    <i class="fas fa-chart-line"></i>
    <span class="nav-label">Trade</span>
    <div class="nav-badge">3</div>
  </a>

  <a href="/dashboard/bots" class="nav-item-mobile">
    <i class="fas fa-robot"></i>
    <span class="nav-label">Bots</span>
