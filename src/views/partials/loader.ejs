<!-- FANCY PAGE LOADER - FULLSCREEN OVERLAY -->
<div id="pageLoader" class="page-loader">
  <div class="loader-container">
    <!-- MAIN LOGO SPINNER -->
    <div class="loader-logo">
      <i class="fas fa-chart-line"></i>
      <h3>xInvest</h3>
    </div>

    <!-- ANIMATED PROGRESS BAR -->
    <div class="progress-container">
      <div class="progress-bar">
        <div class="progress-fill"></div>
      </div>
      <span class="progress-text">Loading...</span>
    </div>

    <!-- ANIMATED DOTS -->
    <div class="loading-dots">
      <span></span>
      <span></span>
      <span></span>
    </div>

    <!-- STATUS TEXT -->
    <div class="loader-status">
      <span class="status-text">Initializing Trading Dashboard</span>
    </div>
  </div>
</div>

<script>
  // ==========================================================================
  // FANCY PAGE LOADER - ALL HTTP REQUESTS
  // ==========================================================================

  class PageLoader {
    constructor() {
      this.loader = document.getElementById("pageLoader");
      this.progressBar = document.querySelector(".progress-fill");
      this.progressText = document.querySelector(".progress-text");
      this.statusText = document.querySelector(".status-text");
      this.progressInterval = null;
      this.currentProgress = 0;

      this.init();
    }

    // 1. INITIALIZE ON PAGE LOAD
    init() {
      // Show loader on page load
      this.show();

      // Hide after content loads
      window.addEventListener("load", () => {
        this.completeProgress();
      });

      // Track ALL HTTP requests
      this.interceptRequests();

      // Update status messages
      this.updateStatusMessages();
    }

    // 2. SHOW LOADER
    show() {
      this.loader.classList.remove("hidden");
      document.body.style.overflow = "hidden";
      this.resetProgress();
      this.startProgress();
    }

    // 3. HIDE LOADER
    hide() {
      this.completeProgress();
      setTimeout(() => {
        this.loader.classList.add("hidden");
        document.body.style.overflow = "";
        this.stopProgress();
      }, 300);
    }

    // 4. PROGRESS SIMULATION
    startProgress() {
      this.stopProgress(); // Clear any existing interval
      this.currentProgress = 0;
      this.progressInterval = setInterval(() => {
        if (this.currentProgress < 90) {
          // Cap at 90% until request completes
          this.currentProgress += Math.random() * 10; // Random increments for smooth effect
          this.currentProgress = Math.min(this.currentProgress, 90);
          this.updateProgress(this.currentProgress);
        }
      }, 200);
    }

    stopProgress() {
      if (this.progressInterval) {
        clearInterval(this.progressInterval);
        this.progressInterval = null;
      }
    }

    resetProgress() {
      this.currentProgress = 0;
      this.updateProgress(0);
    }

    completeProgress() {
      this.currentProgress = 100;
      this.updateProgress(100);
    }

    // 5. INTERCEPT ALL HTTP REQUESTS (GET/POST/PUT/DELETE)
    interceptRequests() {
      // FETCH API INTERCEPTOR
      const originalFetch = window.fetch;
      window.fetch = async (...args) => {
        this.show();
        try {
          const response = await originalFetch(...args);
          this.completeProgress();
          return response;
        } catch (error) {
          this.hide();
          throw error;
        } finally {
          setTimeout(() => this.hide(), 500);
        }
      };

      // XMLHTTPREQUEST INTERCEPTOR
      const originalXHROpen = XMLHttpRequest.prototype.open;
      const originalXHRSend = XMLHttpRequest.prototype.send;

      XMLHttpRequest.prototype.open = function (method, url, ...args) {
        this._loader = this; // Store reference for progress tracking
        this.addEventListener("loadstart", () => this.show());
        this.addEventListener("progress", (e) => {
          if (e.lengthComputable) {
            const percent = (e.loaded / e.total) * 90; // Use 90% max for real progress
            this.updateProgress(percent);
          }
        });
        return originalXHROpen.apply(this, [method, url, ...args]);
      };

      XMLHttpRequest.prototype.send = function (...args) {
        this.addEventListener("loadend", () => {
          this.completeProgress();
          setTimeout(() => this.hide(), 300);
        });
        return originalXHRSend.apply(this, args);
      };

      // FORM SUBMIT INTERCEPTOR
      document.addEventListener("submit", (e) => {
        if (!e.target.closest(".no-loader")) {
          this.show();
        }
      });

      // LINK CLICK INTERCEPTOR
      document.addEventListener("click", (e) => {
        if (e.target.closest("a[href]") && !e.target.closest(".no-loader")) {
          const link = e.target.closest("a");
          if (link.href && !link.href.includes("#")) {
            this.show();
          }
        }
      });
    }

    // 6. UPDATE PROGRESS BAR
    updateProgress(percent) {
      this.progressBar.style.width = `${percent}%`;
      this.progressText.textContent = `Loading... ${Math.round(percent)}%`;
    }

    // 7. DYNAMIC STATUS MESSAGES
    updateStatusMessages() {
      const messages = [
        "Initializing Trading Dashboard",
        "Loading Market Data",
        "Connecting to Exchange",
        "Setting up AI Bots",
        "Preparing Wallet",
        "Finalizing Security",
        "Ready to Trade!",
      ];

      let index = 0;
      const interval = setInterval(() => {
        this.statusText.textContent = messages[index];
        index = (index + 1) % messages.length;
      }, 2000);

      // Stop when loader hides
      this.loader.addEventListener("transitionend", () => {
        if (this.loader.classList.contains("hidden")) {
          clearInterval(interval);
        }
      });
    }

    // 8. MANUAL SHOW/HIDE (For custom use)
    static showLoader() {
      const loader = document.getElementById("pageLoader");
      loader.classList.remove("hidden");
      document.body.style.overflow = "hidden";
      const instance = new PageLoader();
      instance.startProgress();
    }

    static hideLoader() {
      const loader = document.getElementById("pageLoader");
      loader.classList.add("hidden");
      document.body.style.overflow = "";
      const instance = new PageLoader();
      instance.completeProgress();
      instance.stopProgress();
    }
  }

  // ==========================================================================
  // INITIALIZE ON DOM READY
  // ==========================================================================
  document.addEventListener("DOMContentLoaded", () => {
    new PageLoader();
  });

  // ==========================================================================
  // GLOBAL FUNCTIONS (For easy use in other scripts)
  // ==========================================================================
  window.showLoader = () => PageLoader.showLoader();
  window.hideLoader = () => PageLoader.hideLoader();
</script>
